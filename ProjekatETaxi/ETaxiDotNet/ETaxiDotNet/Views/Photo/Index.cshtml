<script type="text/javascript">

    function UploadPic() {
        $.ajax({
            type: 'POST',
            url: ("@Url.Content("~/Photo/Rebind")/"),
            dataType: 'json',
            success: function (data) {
                $("#show").attr("src", data);
                document.getElementById('Submit1').disabled = false;
                alert("Successfully taken picture!");
            }
        });
    }
    function Uploadsubmit() {
        debugger;
        var src = $('img').attr('src');
        src_array = src.split('/');
        src = src_array[5];
        if (src != "") {
            $.ajax({
                type: 'POST',
                url: ("@Url.Content("~/Views/Photo/Index")/"),
                dataType: 'json',
                data: { Imagename: src },
                success: function () { }
            });
            window.opener.location.href = "http://localhost:51865/Photo/Changephoto.cshtml";
            self.close();
        }
    }
</script>
@using (Html.BeginForm())
{
    @section scripts
{
        <script src="@Url.Content("~/Scripts/jquery.webcam.js")">

        </script>
        <script type="text/javascript">

            $("#Camera").webcam({
                width: 320,
                height: 240,
                mode: "save",
                swffile: "@Url.Content("~/Scripts/jscam.swf")",
                onTick: function () { },
                onSave: function () {
                    UploadPic();
                },
                onCapture: function () {
                    webcam.save("@Url.Content("~/Photo/Capture")/");
                },
                debug: function () { },
                onLoad: function () { }
            });
        </script>
    }


    <br />
    <h2>Profile picture</h2>
    <h4>Use webcam to take your best picture</h4>
    <div class="row">
        <div class="col-md-4">

            <div style="margin: 0 auto; width: 980px; text-align: center">
                <div style="float: left; border: 4px solid #ccc; padding: 5px">
                    <div id="Camera"></div><br>
                    <input type="button" value="Capture" onclick="webcam.capture();" class="btn btn-primary" />
                </div>
                <div style="float: left; margin-left: 20px; border: 4px solid #ccc; padding: 5px">
                    <img id="show" style="width: 320px; height: 240px;" src="../../WebImages/profill.png" />
                    <br><br>
                    <input id="Submit1" type="submit" onclick="Uploadsubmit();" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">

    window.onload = load();
    function load() {
        debugger;
        document.getElementById('Submit1').disabled = true;
    }
</script>