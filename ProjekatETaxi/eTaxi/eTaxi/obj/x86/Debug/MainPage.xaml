<Page
    x:Class="eTaxi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:eTaxi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' x:Name="grid1" Background="Orange">
        <Grid HorizontalAlignment="Left" Height="Auto" Margin="28,35,0,0" VerticalAlignment="Top" Width="Auto"/>
        <Button x:ConnectionId='2' x:Name="dugmePrijaviSe" Content="Prijavi se" HorizontalAlignment="Center" VerticalAlignment="Center" Width="230"
                Grid.Row="3" FontSize="30" Height="50"
                Grid.ColumnSpan="2"/>
        <TextBlock x:ConnectionId='3' x:Name="textBlockLozinka" HorizontalAlignment="Right" Margin="15,15,30,15" Text="Password:" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Segoe UI"
                   Grid.Row="2" FontSize="20"/>
        <TextBlock HorizontalAlignment="Right" Margin="15,15,30,15" TextWrapping="Wrap" VerticalAlignment="Bottom"
                   Grid.Row="1" Grid.Column="0" FontSize="20" Text="E-mail:"
                  />
        <TextBox x:ConnectionId='4' x:Name="textBoxEMail" Grid.Column="1"  HorizontalAlignment="Left" Margin="5,15,15,15" Grid.Row="1" Text="" VerticalAlignment="Bottom" Width="150"/>
        <PasswordBox Grid.Column="1"  HorizontalAlignment="Left" Margin="5,15,15,15" Grid.Row="2"
                     VerticalAlignment="Top" Width="150" PasswordChar="*"/>
        <TextBlock x:ConnectionId='5' x:Name="label1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="10" Grid.Row="4" Text="Nemate korisnički račun?" 
                   VerticalAlignment="Bottom" FontSize="22" />
        <HyperlinkButton Content="Registrujte se!" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="15" Grid.Row="5" VerticalAlignment="Top" FontSize="22"/>
        <Image x:ConnectionId='6' x:Name="imageLogo" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0" Grid.Row="0" VerticalAlignment="Center"
               Source="Assets/eTaxiLogo.png" Stretch="Fill"/>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

    </Grid>
</Page>

